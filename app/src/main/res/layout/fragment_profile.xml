<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="#F6F6F6">


    <TextView
        android:id="@+id/achievements"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:gravity="top"
        android:text="@string/achievements"
        android:textAppearance="@style/account"
        app:layout_constraintBottom_toTopOf="@+id/btLeaderboard"
        app:layout_constraintStart_toStartOf="@+id/btLeaderboard" />

    <View
        android:id="@+id/colour_name"
        android:layout_width="411dp"
        android:layout_height="88dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/profile_colour_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/background_white"
        android:layout_width="312dp"
        android:layout_height="77.78dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/profile_white_bg"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />

    <ImageButton
        android:id="@+id/btSignOut"
        android:layout_width="162dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/sign_out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback" />

    <ImageButton
        android:id="@+id/btLeaderboard"
        android:layout_width="361dp"
        android:layout_height="58dp"
        android:layout_marginTop="46dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/leaderboard_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/background_white" />

    <ImageButton
        android:id="@+id/help"
        android:layout_width="361dp"
        android:layout_height="58dp"
        android:layout_marginTop="336dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/help_ctr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_white"
        tools:src="@drawable/help_ctr" />

    <ImageButton
        android:id="@+id/feedback"
        android:layout_width="361dp"
        android:layout_height="58dp"
        android:layout_marginTop="394dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/feedback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_white" />

    <ImageView
        android:id="@+id/emailBG"
        android:layout_width="361dp"
        android:layout_height="58dp"
        android:layout_marginTop="216dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_white"
        app:srcCompat="@drawable/email" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/background_white"
        app:layout_constraintStart_toStartOf="@+id/background_white"
        app:layout_constraintTop_toTopOf="@+id/background_white"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/name"
        style="@style/prof_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="39dp"
        android:text="Name"
        android:textColor="#424242"
        app:layout_constraintBottom_toBottomOf="@+id/background_white"
        app:layout_constraintStart_toEndOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="@+id/background_white"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/animal"
        style="@style/levelanimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/background_white"
        app:layout_constraintStart_toStartOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/staricon"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_marginStart="228dp"
        android:layout_marginLeft="228dp"
        app:layout_constraintBottom_toBottomOf="@+id/background_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background_white"
        app:layout_constraintVertical_bias="0.49"
        app:srcCompat="@drawable/stars" />

    <TextView
        android:id="@+id/account"
        android:layout_width="64dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:gravity="top"
        android:text="@string/account"
        android:textAppearance="@style/account"
        app:layout_constraintBottom_toTopOf="@+id/emailBG"
        app:layout_constraintStart_toStartOf="@+id/btLeaderboard" />

    <TextView
        android:id="@+id/supp"
        android:layout_width="64dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:gravity="top"
        android:text="Support"
        android:textAppearance="@style/account"
        app:layout_constraintBottom_toTopOf="@+id/help"
        app:layout_constraintStart_toStartOf="@+id/btLeaderboard" />

    <TextView
        android:id="@+id/email"
        style="@style/prof_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:gravity="top"
        android:text="email@email"
        android:textAppearance="@style/g_joukhadar"
        app:layout_constraintBottom_toBottomOf="@+id/emailBG"
        app:layout_constraintStart_toStartOf="@+id/emailBG"
        app:layout_constraintTop_toTopOf="@+id/emailBG"
        app:layout_constraintVertical_bias="0.421" />

    <TextView
        android:id="@+id/stars"
        style="@style/prof_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="30dp"
        android:text="999"
        android:textColor="#000000"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/background_white"
        app:layout_constraintStart_toEndOf="@+id/staricon" />

    <ImageButton
        android:id="@+id/rewardsButton"
        android:layout_width="361dp"
        android:layout_height="58dp"
        android:background="#00FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/btLeaderboard"
        app:layout_constraintTop_toBottomOf="@+id/btLeaderboard"
        app:srcCompat="@drawable/rewards" />

</androidx.constraintlayout.widget.ConstraintLayout>